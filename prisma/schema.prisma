generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model FamilyMember {
    id          String     @default(uuid()) @id
    first_name  String
    last_name   String
    avatar_url  String
    parent_id   String?
    parent      FamilyMember? @relation("ParentChild", fields:[parent_id],references: [id], onDelete: Cascade )
    child_ids   FamilyMember[] @relation("ParentChild")
}
